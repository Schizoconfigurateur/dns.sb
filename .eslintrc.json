{
  "root": true,
  "extends": "next/core-web-vitals",
  "overrides": [
    {
      "files": [
        "**/*.js"
      ],
      "extends": [
        "sukka/node"
      ]
    },
    {
      "files": [
        "*.d.ts",
        "**/*.ts",
        "**/*.tsx"
      ],
      "parserOptions": {
        "project": "./tsconfig.json",
        "sourceType": "module"
      },
      "extends": [
        "sukka/react",
        "sukka/typescript"
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-non-null-assertion": "off"
      },
      "settings": {
        "node": {
          "resolvePaths": [
            "__dirname"
          ],
          "tryExtensions": [
            ".js",
            ".json",
            ".node",
            ".ts",
            ".d.ts",
            ".tsx"
          ]
        }
      }
    }
  ]
}
